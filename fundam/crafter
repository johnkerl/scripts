#!/usr/bin/perl

# ================================================================
# John Kerl
# http://johnkerl.org
# Prints a carriage return after lines matching a specified pattern.
# ================================================================

use line_term_lib;
die "Usage: $0 {pattern} [input]\n" unless @ARGV;
$pattern = shift @ARGV;

while ($line = <>) {
	($line, $term) = split_line_ending($line);
	print "$line$term";
	if ($line =~ m/$pattern/) {
		print "$term";
	}
}
