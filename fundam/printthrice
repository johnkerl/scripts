#! /usr/bin/perl -w

# ================================================================
# John Kerl
# http://johnkerl.org
# Prints each line three times, carriage-return delimited.  Occasionally useful
# as a text-editing technique.
# ================================================================

use line_term_lib;
while ($line = <>) {
	($line, $term) = split_line_ending($line);
	print "$line$term";
	print "$line$term";
	print "$line$term";
}
